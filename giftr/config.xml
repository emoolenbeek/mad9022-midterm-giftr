<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.mool0008.myGiftr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Eric's Giftr</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="5000"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/splash-land-hdpi.png" density="land-hdpi" />
        <splash src="res/screen/splash-land-mdpi.png" density="land-mdpi" />
        <splash src="res/screen/splash-land-xhdpi.png" density="land-xhdpi" />
        <splash src="res/screen/splash-land-xxhdpi.png" density="land-xxhdpi" />
        <splash src="res/screen/splash-land-xxxhdpi.png" density="land-xxxhdpi" />


        <splash src="res/screen/splash-port-hdpi.png" density="port-hdpi" />
        <splash src="res/screen/splash-port-mdpi.png" density="port-mdpi" />
        <splash src="res/screen/splash-port-xhdpi.png" density="port-xhdpi" />
        <splash src="res/screen/splash-port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="res/screen/splash-port-xxxhdpi.png" density="port-xxxhdpi" />

        <icon src="res/icons/icon-mdpi.png" density="mdpi" />
        <icon src="res/icons/icon-hdpi.png" density="hdpi" />
        <icon src="res/icons/icon-xhdpi.png" density="xhdpi" />
        <icon src="res/icons/icon-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icons/icon-xxxhdpi.png" density="xxxhdpi" />


    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
